form.card
	input(type="hidden" name='id' value='1')
	a(href="#").card__img
		img(src="./web/images/content/photo2.jpg", alt="Иванова Татьяна Владимировна")
	.card__row
		a(href="#").g-title Иванова Татьяна Владимировна
		.card__col
			.card__list
				.card__icon
					+icon('doctor')
				ul
					li Акушер, гинеколог
					li Высшая категория
					li Стаж работы 17 лет
			.card__list
				.card__icon
					+icon('hospital')
				ul
					li: a(href="#") Клиника Сова
					li: a(href="#") Клиника Пересвет
					li: a(href="#") Клиника Эксперт
		
		.card__col
			label.calendar
				input(type="date" name='date' required)
			
			select(name='time' required)
				option(value="") Время
				option(value="12:00") 12:00
				option(value="13:00") 13:00

		.card__col
			span.rub 1100
			button.g-btn(type='button' data-btn-modal='appointment-doctor') Записаться